block content
  
  h1= title
  p Welcome to #{title}

  //script(src='/javascripts/view_getkeyword.js')
  script.
    $(document).ready(function(){
      $("#wordcloud1").awesomeCloud({
        "size" : {
          "grid" : 16,
          "normalize" : false
        },
        "options" : {
          "color" : "random-dark",
          "rotationRatio" : 0.35,
          "printMultiplier" : 3,
          "sort" : "random"
        },
