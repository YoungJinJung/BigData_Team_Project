        $(function() {
          $( "input[type=submit]" )
            .button()
            .click(function( event ){
              console.log("button-clicked");
              var date = $('#datepicker1').val();
              var category = $('#category').val();
              if (date.length != 0){
                alert(date + " and " + category );
